# ValuePrinter

vp.init_constant : init global constant // Format: @name = [internal] constant type value
vp.init_ext_constant : init external constant
vp.init_struct_constant : Structure constant definition //구조체


vp.define : function
vp.begin_block : begin block
vp.end_define : end define

vp.declare : declare return_type function_name(arg_types)
vp.call : call function 

vp.malloc_mem
vp.alloca_mem
vp.load
vp.store
vp.getelementptr


== PA5

vp.type_define : define type
vp.type_alias_define : add alias to type