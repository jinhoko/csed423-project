// cgen

@ program_class::cgen
    @ CgenClassTable::CgenClassTable
        install_basic_classes()
            install_special_class(noclasscls);
            install_special_class(primintcls);
            install_special_class(primboolcls);
            install_class(objcls)
            install_class(intcls)
            install_class(boolcls)
        install_classes(classes)
            foreach class, install_class(CgenNode *nd)
        build_inheritance_tree()
        setup();                                            // 1st pass
            setup_external_functions()
                decalre strcmp
                declare printf
                declare abort
                declare malloc
            setup_classes(root)
                // may add to setup_classes
        code_module();
            CgenNode* mainNode = getMainmain(root());
	        mainNode->codeGenMainmain();
                CgenNode::codeGenMainmain()
                    // TODO codeGenMainmain
            code_main()
                // TODO call main_main()
                
            


